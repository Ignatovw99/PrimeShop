{
  "name": "primeshop-backend",
  "version": "1.0.0",
  "description": "PrimeShop - ECommerce application Backend",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "watch": "nodemon -r dotenv/config server.js",
